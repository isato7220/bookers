<h1>Books</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
  </tr>

<%= @books.each do |book| %>
  <tr>
    <td><%= book.title %></td>
    <td><%= book.body %></td>
    <td><%= link_to "show",show_book_path(@books.id) %>
    <td><%= link_to "edit",edit_book_path(@books.id) %>
    <td><%= link_to "destroy",destroy_book_path(@books.id) %>
  </tr>
</table>

<%= form_with model: Book.new do |f| %>
  <h1>New book</h1>
  <h5>Title</h5>
    <%= f.text_field :title %>
  <h5>Body</h5>
    <%= f.test_area :body %>

    <%= f.submit 'Creat Book'%>

<% end %>