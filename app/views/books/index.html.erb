

<h1 class=index_title>Books</h1>
<body>
  <div class=list>
    <table>
      <tr>
        <th>Title</th>
        <th>Body</th>
      </tr>

      <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
          <td><%= link_to "Show",book_path(book) %></td>
          <td><%= link_to "Edit",edit_book_path(book) %></td>
          <td><%= link_to "Destroy", book_path(book), method: :delete, data: { confirm: "本当に削除しますか？" } %></td>
        </tr>
      <% end %>
    </table>
  </div>


  <div class=new_form>
    <%= form_with model: Book.new do |f| %>
      <div class="create_body">
      <h1>New book</h1>
        <% if @book.errors.any? %>
          <p>error</p>
          <%= @book.errors.count %>件のエラーが発生しました
            <ul>
              <% @book.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
        <% end %>
  <div class="form_title">
    <h5>Title</h5>
    <%= f.text_field :title %>
  </div>
  <div class="form_body">
    <h5>Body</h5>
    <%= f.text_area :body %>
  </div>

  <div class="submit">
    <%= f.submit 'Create Book',class: "submit-btn" %>
  </div>
</div>
  
<% end %>

</div>
</body>