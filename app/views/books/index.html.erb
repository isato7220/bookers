<h1 class=index_title>Books</h1>
<body>
<div class=list>
<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
  </tr>

<% @books.each do |book| %>
  <tr>
    <td><%= book.title %></td>
    <td><%= book.body %></td>
    <td><%= link_to "show",book_path(book) %>
    <td><%= link_to "edit",edit_book_path(book) %>
    <td><%= link_to "destroy",book_path(book),method: :delete,"deta-confirm" => "本当に削除しますか" %>
  </tr>
  <% end %>
</table>
</div>


<div class=new_form>
<%= form_with model: Book.new do |f| %>
<div class="create_body">
  <h1>New book</h1>
    <div class="form_title">
      <h5>Title</h5>
      <%= f.text_field :title %>
    </div>
    <div class="form_body">
      <h5>Body</h5>
      <%= f.text_area :body %>
    </div>

  <div class="submit">
    <%= f.submit 'Create Book',class: "submit-btn" %>
  </div>

</div>
<% end %>
</body>